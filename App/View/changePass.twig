{% extends 'template.twig' %}

{% block content %}
    <div class="container margin-menu-custom">
        
        <div class="row">
            <div class="col-md-6">
            <p>Pour accéder à toutes les fonctionnalitées du site,<br>
                vous pouvez vous connectez</p>
        </div>
        <div class="col-md-6">
            <form action="index.php?action=resetConfirm" method="POST" class="mx-auto">
            <div class="form-group">
                    <input type="text" class="form-control" name="pseudo" value="{{user.pseudo}}" readonly="readonly">
                </div>
                <div class="form-group">
                    <label for="password">
                        Saisiser votre nouveau mot de passe:
                    </label>
                    <input type="password" class="form-control newPassword" name="password">
                </div>
                <div class="form-group">
                    <label for="password2">
                        Confirmer votre mot de passe:
                    </label>
                    <input type="password" class="form-control newPassword2" name="password2">
                </div>
                <div class="form-group">
                    <input type="submit" value="Modifier" name="resetConfirm" class="form-control newPassView">
                </div>
                
            </form>
        </div>
        </div>
        
    </div>
     
{% endblock %}