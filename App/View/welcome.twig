{% extends 'template.twig' %}

{% block header %}
<title>DAD IN FORMATION | welcome</title>
<meta name="description" content="Bienvenue sur le site des futurs papas qui souhaitent apprendre à acceuillir leur enfant et comment évoluer avec">
{% endblock %}

{% block content %}
    

    <header class="illu">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                         <h1 class="site-name">DAD IN FORMATION</h1>
                         <p>Le site des futures papas.</p>
                    </div>
                </div>
            </div>
        </div>
    </header>
   
    <section class="container mt-5">
        <div class="row">
            <h4 class="mb-5 blue">Sur le site vous pourrez retrouver :</h4>
           <div class="col-12">
               <div class="d-flex flex-column align-content-center justify-content-center">
                    <h4 class="name pink"><i class="far fa-lightbulb blue"></i> Des astuces</h4>
               </div>
           </div>
           <div class="row">
                {% for article in astuces %} 
                <div class="col-xs-12 col-lg-6 mt-5">
                    <div class="card h-100 text-center">
                        <div class="card-header blue-bg">
                        <h5 class="card-title white-txt">{{article.title}} </h5>
                        
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between">
                            
                            <p class="card-text h-100">{{article.content}}</p>
                            
                            
                        </div>
                        
                    </div>
                </div>
                {% endfor %}
            </div>
           <div class="col-12 mt-5">
               <div class="d-flex flex-column align-content-center justify-content-center">
                    <h4 class="name pink"><i class="fas fa-graduation-cap blue"></i> Des tutos</h4>
               </div>
               <div class="row">
                    {% for tuto in tutos %}
                    <div class="col-lg-6 col-sm-12 mt-4">
                        <div class="box-tuto d-flex flex-column justify-content-between h-100">
                            <a href="#" class="tuto-style h-100 bloquer">
                                    <div class="card text-center h-100">
                                        <div class="card-header">
                                            <h5 class="card-title">{{ tuto.title | raw}}</h5>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">{{ tuto.presentation }}</p>
                                            
                                        </div>
                                    </div>
                                </a>
                        </div>
                        
                    </div>
                    {% endfor %}
                </div>
           </div>
        </div>
    </section>

    
    
    
    <section class="container mt-5 mb-5">
        <h1 class="display-4 site-name"><span class="blue">DAD IN</span><span class="pink"> FORMATION</span></h1>
         <p class="lead">Le premier site dédié au papa. <br>
                        Apprenez comment acceuillir votre enfant, découvrez les petits conseils de notre équipe <br>
                    et enfin partagez votre experience avec d'autre papa.</p>
         <hr class="my-4">
    {%if session.pseudo is defined%}
    {%else%}
         <p>Pour acceder au fonctionnalités du site inscrivez vous.</p>
         <a class="btn btn-primary btn-lg" href="index.php?action=registrationView" role="button">inscription</a>
    {%endif%}
    </section>

    
        
    
    
    
{% endblock %}